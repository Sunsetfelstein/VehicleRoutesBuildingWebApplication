@model List<VehicleRoutesBuildingWebApplication.Models.Domain.Client>
@{
    ViewData["Title"] = "Список клиентов";
}

<h1>Клиенты</h1>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Номер телефона</th>
            <th>Адрес</th>
            <th>Вес товара</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.PhoneNumber</td>
                <td>@client.Location.Adress</td>
                <td>@client.ProductWeight</td>
                <td> <a href="Clients/Delete/@client.Id" style="color: white;">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>